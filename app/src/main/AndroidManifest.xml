<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
    <uses-permission android:name="android.permission.SCHEDULE_EXACT_ALARM" />
    <uses-permission android:name="android.permission.USE_EXACT_ALARM" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppTest4"
        tools:targetApi="31">
        <activity
            android:name=".ui.gamehelpers.DicesFinishPanel"
            android:exported="false"
            android:label="@string/title_activity_dices_finish_panel"
            android:theme="@style/Theme.AppTest4" />
        <activity
            android:name=".ui.gamehelpers.DicesChooseNumber"
            android:exported="false"
            android:label="@string/title_activity_dices_choose_mode"
            android:theme="@style/Theme.AppTest4" />
        <activity
            android:name=".ui.gamehelpers.DicesChooseMode"
            android:exported="false"
            android:label="@string/title_activity_dices_choose_mode"
            android:theme="@style/Theme.AppTest4" />
        <activity
            android:name=".ui.games.RememberDices"
            android:exported="false"
            android:label="@string/title_activity_remember_dices"
            android:theme="@style/Theme.AppTest4" />
        <activity
            android:name=".ui.auth.LoginActivity"
            android:exported="true"
            android:label="@string/title_activity_login"
            android:theme="@style/Theme.AppTest4">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.auth.RegisterActivity"
            android:exported="false"
            android:label="@string/title_activity_register"
            android:theme="@style/Theme.AppTest4" />
        <activity
            android:name=".ui.gamehelpers.ChooseGameActivity"
            android:exported="false"
            android:label="@string/title_activity_choose_game"
            android:theme="@style/Theme.AppTest4" />
        <activity
            android:name=".ui.gamehelpers.FinishedGameActivity"
            android:exported="false"
            android:label="@string/title_activity_finished_game"
            android:theme="@style/Theme.AppTest4" />
        <activity
            android:name=".ui.gamehelpers.CatchTheBearTimeMode"
            android:exported="false"
            android:label="@string/title_activity_finished_game"
            android:theme="@style/Theme.AppTest4" />
        <activity
            android:name=".ui.userprofile.AccountSettings"
            android:exported="false"
            android:label="@string/title_activity_finished_game"
            android:theme="@style/Theme.AppTest4" />
        <activity
            android:name=".ui.userprofile.RemindersActivity"
            android:exported="false"
            android:label="@string/title_activity_finished_game"
            android:theme="@style/Theme.AppTest4" />
        <activity
            android:name=".ui.games.CatchTheBear"
            android:exported="false"
            android:label="@string/app_name"
            android:screenOrientation="locked"
            android:theme="@style/Theme.AppTest4" />
        <receiver
            android:name=".computation.notifications.NotificationsBroadcast"
            android:enabled="true" />
    </application>

</manifest>